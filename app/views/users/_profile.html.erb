<div class="content profile">
  <div class="row">
    <div class="col-xs-3"> <!-- gravatar -->
      <%= gravatar_for(user, size: 60) %>
    </div>
    <div class="col-xs-9 profile-name-gender"> <!-- name,gender -->
      <p><%= user.name %></p>
      <p>性別：<%= user.gender %></p>
    </div>
  </div>
  <div class="mt20"> <!-- self introduction -->
    <h4>自己紹介</h4>
    <p><%= user.profile %></p>
  </div>
  <div class="row"> <!-- follow form -->
    <div class="col-sm-8 col-md-12 mb20" id="stats_<%= user.id %>"> <!-- follow&follower -->
      <%= render 'users/stats', user: user %>
    </div>
    <div class="col-sm-4 col-md-12"> <!-- follo button or edit-link -->
      <%= render 'users/follow_form', user: user %>
    </div>
  </div>
</div>
